{
  "name": "stylesheet-sorter",
  "displayName": "Stylesheet Sorter",
  "description": "Sort your stylesheets in a predictable way",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/dejmedus/css-style-sorter"
  },
  "bugs": {
    "url": "https://github.com/dejmedus/css-style-sorter/issues"
  },
  "version": "0.0.41",
  "pricing": "Free",
  "engines": {
    "vscode": "^1.79.0"
  },
  "publisher": "dejmedus",
  "license": "MIT",
  "keywords": [
    "stylesheet",
    "sorting",
    "CSS"
  ],
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Stylesheet Sorter",
      "type": "object",
      "properties": {
        "Stylesheet Sorter.Sort Order": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "boxModel",
            "grid",
            "flexbox",
            "marginAndPadding",
            "border",
            "widthAndHeight",
            "typography",
            "backgroundAndVisual",
            "transformationsAndAnimations",
            "other"
          ],
          "additionalProperties": false,
          "description": "Sort order of CSS categories"
        },
        "Stylesheet Sorter.Categories": {
          "type": "object",
          "default": {
            "boxModel": [
              "display",
              "position",
              "top",
              "right",
              "bottom",
              "left",
              "z-index",
              "float",
              "clear",
              "box-sizing"
            ],
            "grid": [
              "grid",
              "grid-template",
              "grid-template-areas",
              "grid-template-rows",
              "grid-template-columns",
              "grid-row",
              "grid-row-start",
              "grid-row-end",
              "grid-column",
              "grid-column-start",
              "grid-column-end",
              "grid-auto-rows",
              "grid-auto-columns",
              "grid-auto-flow",
              "grid-gap",
              "grid-row-gap",
              "grid-column-gap",
              "justify-items",
              "align-items",
              "place-items",
              "justify-content",
              "align-content",
              "place-content",
              "grid-auto-flow",
              "grid-template-rows",
              "grid-template-columns",
              "grid-template-areas",
              "grid-gap",
              "grid-row-gap",
              "grid-column-gap",
              "grid-area",
              "grid-row",
              "grid-column"
            ],
            "flexbox": [
              "flex",
              "flex-grow",
              "flex-shrink",
              "flex-basis",
              "justify-content",
              "align-items",
              "align-content",
              "order"
            ],
            "marginAndPadding": [
              "margin",
              "margin-top",
              "margin-right",
              "margin-bottom",
              "margin-left",
              "padding",
              "padding-top",
              "padding-right",
              "padding-bottom",
              "padding-left"
            ],
            "widthAndHeight": [
              "width",
              "min-width",
              "max-width",
              "height",
              "min-height",
              "max-height"
            ],
            "border": [
              "border",
              "border-width",
              "border-style",
              "border-color",
              "border-top",
              "border-top-width",
              "border-top-style",
              "border-top-color",
              "border-right",
              "border-right-width",
              "border-right-style",
              "border-right-color",
              "border-bottom",
              "border-bottom-width",
              "border-bottom-style",
              "border-bottom-color",
              "border-left",
              "border-left-width",
              "border-left-style",
              "border-left-color",
              "border-radius",
              "border-top-left-radius",
              "border-top-right-radius",
              "border-bottom-left-radius",
              "border-bottom-right-radius"
            ],
            "typography": [
              "font",
              "font-family",
              "font-size",
              "font-style",
              "font-weight",
              "color",
              "text-align",
              "text-decoration",
              "text-transform",
              "text-indent",
              "line-height",
              "letter-spacing",
              "white-space"
            ],
            "backgroundAndVisual": [
              "background",
              "background-color",
              "background-image",
              "background-repeat",
              "background-position",
              "background-size",
              "background-attachment",
              "opacity",
              "box-shadow",
              "text-shadow"
            ],
            "transformationsAndAnimations": [
              "transform",
              "transform-origin",
              "transition",
              "animation",
              "animation-name",
              "animation-duration",
              "animation-delay",
              "animation-timing-function",
              "animation-iteration-count",
              "animation-direction",
              "animation-fill-mode"
            ],
            "other": [
              "cursor",
              "visibility",
              "overflow",
              "overflow-x",
              "overflow-y",
              "list-style",
              "list-style-type",
              "list-style-position",
              "list-style-image",
              "pointer-events",
              "user-select"
            ]
          },
          "items": {
            "type": "string"
          },
          "additionalProperties": false,
          "description": "List of properties in CSS categories"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "sinon": "^17.0.1"
  },
  "dependencies": {
    "@types/css-tree": "^2.3.1",
    "css-tree": "^2.3.1"
  }
}
